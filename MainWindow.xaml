<Window x:Class="RectangleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectangleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Beige" >
            <Label>Ширина:</Label>
            <TextBox Text="{Binding RectangleWidthValue, Mode=TwoWay}" Width="100" Margin="5"/>
            <Label>Высота:</Label>
            <TextBox Text="{Binding RectangleHeightValue, Mode=TwoWay}" Width="100" Margin="5"/>
            <Label>Радиусы скругления:</Label>
            <TextBox Text="{Binding Radius1, Mode=TwoWay}" Width="50" Margin="5"/>
            <TextBox Text="{Binding Radius2, Mode=TwoWay}" Width="50" Margin="5"/>
            <TextBox Text="{Binding Radius3, Mode=TwoWay}" Width="50" Margin="5"/>
            <TextBox Text="{Binding Radius4, Mode=TwoWay}" Width="50" Margin="5"/>
            <Label>Ширина поля:</Label>
            <TextBox Text="{Binding CanvasWidth, Mode=OneWay}" Width="50" Margin="5" Background="Transparent"/>
            <Label>Высота поля:</Label>
            <TextBox Text="{Binding CanvasHeight, Mode=OneWay}" Width="50" Margin="5" Background="Transparent"/>

        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="AliceBlue">
            <Label>Радиус Оси С1:</Label>
            <TextBox Text="{Binding CircleRadius, Mode=TwoWay}" Width="50" Margin="5"/>
            <Label>Угол Оси С1:</Label>
            <TextBox Text="{Binding C1_Angle, Mode=TwoWay}" Width="50" Margin="5"/>
            <Label>Смещение центра вращения по Х:</Label>
            <TextBox Text="{Binding CircleCenterX_offset, Mode=TwoWay}" Width="50" Margin="5"/>
            <Label>Смещение центра вращения по У:</Label>
            <TextBox Text="{Binding CircleCenterY_offset, Mode=TwoWay}" Width="50" Margin="5"/>
            <Label>Скорость вращения:</Label>
            <TextBox Text="{Binding RotationSpeed, Mode=TwoWay}" Width="50" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="Bisque">
            <Label>Радиус Оси С1:</Label>
            <TextBox Text="{Binding CircleRadius, Mode=TwoWay}" Width="100" Margin="5"/>
            <Button Content="Start" Width="80" Margin="5" Click="StartButton_Click"/>
            <Button Content="Stop" Width="80" Margin="5" Click="PauseButton_Click"/>
            <Button Content="Reset" Width="80" Margin="5" Click="ResetButton_Click"/>

        </StackPanel>


        <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Canvas Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"
                    x:Name="canvas"></Canvas>
        </Grid>

    </Grid>
</Window>
